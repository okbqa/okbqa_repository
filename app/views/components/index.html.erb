<h2>List</h2>

<table>
  <tr>
    <th style="width:10em">Title</th>
    <th style="width:10em">Category</th>
    <th>Description</th>
    <th style="width:15em">Maintainer</th>
  </tr>

<% @components.each do |component| %>
  <tr>
    <td><%= link_to component.title, component %></td>
    <td><%= component.category %></td>
    <td><%= component.description.html_safe %></td>
    <td><%= component.user.email %></td>
    <% if user_signed_in? && component.editable?(current_user) -%>
      <td>
          <span class='button'><%= link_to 'Edit', edit_component_path(component) %></span>
          <span class='button'><%= link_to 'Destroy', component, method: :delete, data: { confirm: 'Are you sure?' } %></span>
      </td>
    <% end %>
  </tr>
<% end %>
</table>

