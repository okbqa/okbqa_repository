<%= form_for(@component) do |f| %>
  <% if @component.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@component.errors.count, "error") %> prohibited this component from being saved:</h2>

      <ul>
      <% @component.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

<table>
  <tr>
    <th><%= f.label :title %></th>
    <td><%= f.text_field :title %></td>
  </tr>

  <tr>
    <th>Category</th>
    <td>
      <%= f.radio_button(:category, 'Template generation') %>
      <%= f.label :template_generation %><br/>
      <%= f.radio_button(:category, 'Disambiguation') %>
      <%= f.label :disambiguation %><br/>
      <%= f.radio_button(:category, 'Query generation') %>
      <%= f.label :query_generation %><br/>
      <%= f.radio_button(:category, 'Answer generation') %>
      <%= f.label :answer_generation %><br/>
      <%= f.radio_button(:category, 'Rendering') %>
      <%= f.label :rendering %><br/>
      <%= f.radio_button(:category, 'Parser') %>
      <%= f.label :parser %><br/>
      <%= f.radio_button(:category, 'Semantic computing') %>
      <%= f.label :semantic_computing %><br/>
      <%= f.radio_button(:category, 'Other') %>
      <%= f.label :Other %>
    </td>
  </tr>

  <tr>
    <th><%= f.label :description %></th>
    <td><%= f.text_area :description, cols:80 %></td>
  </tr>

  <tr>
    <th><%= f.label :user %></th>
    <td><%= current_user.email %></td>
  </tr>

  <tr>
    <th><%= f.label 'Source-code URL' %></th>
    <td><%= f.text_field :sc_url %></td>
  </tr>
  <tr>
    <th><%= f.label 'Homepage URL' %></th>
    <td><%= f.text_field :home_url %></td>
  </tr>
  <tr>
    <th><%= f.label 'Web service URL' %></th>
    <td><%= f.text_field :ws_url %></td>
  </tr>
  <tr>
    <th><%= f.label 'Sample cURL command' %></th>
    <td><%= f.text_field :sample_curl_command, placeholder: "The placeholder, _sample_input_, will be substituted by the value of the field, Sample input." %></td>
  </tr>
  <tr>
    <th><%= f.label :sample_input %></th>
    <td><%= f.text_area :sample_input %></td>
  </tr>
  <tr>
    <th><%= f.label :sample_output %></th>
    <td><%= f.text_area :sample_output %></td>
  </tr>
  </table>
  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>
